<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/escape_pause"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/pause"
        android:layout_width="555dp"
        android:layout_height="367dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="0dp"
        android:src="@drawable/escape_pause"
        tools:ignore="ContentDescription" />

    <Button
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/pause"
        android:layout_alignEnd="@+id/pause"
        android:layout_alignParentTop="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="417dp"
        android:text="Resume" />

    <TextView
        android:id="@+id/instruction"
        android:layout_width="282dp"
        android:layout_height="125dp"
        android:layout_alignStart="@+id/pause"
        android:layout_alignTop="@+id/pause"
        android:layout_alignEnd="@+id/pause"
        android:layout_alignBottom="@+id/pause"
        android:layout_marginStart="125dp"
        android:layout_marginTop="129dp"
        android:layout_marginEnd="148dp"
        android:layout_marginBottom="113dp"
        android:text="Instruction" />

    <Button
        android:id="@+id/exit"
        android:layout_width="113dp"
        android:layout_height="65dp"
        android:layout_alignStart="@+id/pause"
        android:layout_alignTop="@+id/pause"
        android:layout_alignEnd="@+id/pause"
        android:layout_alignBottom="@+id/pause"
        android:layout_marginStart="397dp"
        android:layout_marginTop="275dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="27dp"
        android:text="Exit" />
</RelativeLayout>